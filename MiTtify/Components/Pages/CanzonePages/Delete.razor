@page "/canzones/delete"
@using Microsoft.EntityFrameworkCore
@using MiTtify.DataBase
@inject IDbContextFactory<MiTtify.Data.MiTtifyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Canzone</h2>
    <hr />
    @if (canzone is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@canzone.Nome</dd>
        </dl>
        <EditForm method="post" Model="canzone" OnValidSubmit="DeleteCanzone" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(canzone is null)">Delete</button> |
            <a href="/canzones">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Canzone? canzone;

    [SupplyParameterFromQuery]
    private string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        canzone = await context.Canzone.FirstOrDefaultAsync(m => m.Id == Id);

        if (canzone is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCanzone()
    {
        using var context = DbFactory.CreateDbContext();
        context.Canzone.Remove(canzone!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/canzones");
    }
}
