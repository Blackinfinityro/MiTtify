@page "/canzones/edit"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using MiTtify.DataBase
@inject IDbContextFactory<MiTtify.Data.MiTtifyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Canzone</h2>
<hr />
@if (Canzone is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Canzone" OnValidSubmit="UpdateCanzone" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Canzone.Id" value="@Canzone.Id" />
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome:</label>
                    <InputText id="nome" @bind-Value="Canzone.Nome" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Canzone.Nome" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="autore" class="form-label">Autore:</label>
                    <InputText id="autore" @bind-Value="Canzone.Autore" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Canzone.Autore" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/canzones">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private string Id { get; set; }

    [SupplyParameterFromForm]
    private Canzone? Canzone { get; set; }
    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Canzone ??= await context.Canzone.FirstOrDefaultAsync(m => m.Id == Id);

        if (Canzone is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateCanzone()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Canzone!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!CanzoneExists(Canzone!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/canzones");
    }

    private bool CanzoneExists(string id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Canzone.Any(e => e.Id == id);
    }
}
